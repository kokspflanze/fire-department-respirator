{% extends 'layout/layout' %}

{% block title %}
    {{ translate('UserDelete') }} - {{ user.getUsername }} [{{ user.getId }}]
{% endblock title %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">{{ translate('Details') }}</div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-condensed">
                                    <tr>
                                        <td>{{ translate('UserId') }}:</td>
                                        <td>{{ user.getId }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ translate('Username') }}:</td>
                                        <td>{{ user.getUsername }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ translate('EMail') }}:</td>
                                        <td>{{ user.getEmail }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ translate('Created') }}:</td>
                                        <td>{{ user.getCreated.format('d.m.Y H:i') }}</td>
                                    </tr>
                                </table>
                            </div>
                            <a href="{{ url('PeachUserPanel/detail', {'action' : 'delete-confirm', 'id' : user.getId}) }}" class="btn btn-danger btn-xs">{{ translate('delete') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}